<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_flight_summary_alternate_view"
    android:padding="@dimen/flight_details_card_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dt_twitter_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/swoopair_we_wanttofly_bunch_of_cancellations_and_delays_here"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:maxLines="3"
        app:layout_constraintBottom_toTopOf="@id/dt_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dt_info_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dt_info_button"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_flight_summary_alternate_view"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:src="@drawable/ic_more_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/more_information" />

    <TextView
        android:id="@+id/dt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:textAlignment="textEnd"
        android:textColor="@color/gray_400"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dt_twitter_info"
        tools:text="2022/09/09"/>

</androidx.constraintlayout.widget.ConstraintLayout>